<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 네이버 지도 Fragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.naver.maps.map.MapFragment"/>

    <!-- Bottom Sheet -->
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button5"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- 제목 -->
        <TextView
            android:id="@+id/sheet_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Enter your preferred location!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@color/white"/>

        <!-- ListView -->
        <ListView
            android:id="@+id/lvId"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"/>
    </LinearLayout>
    <!-- 검색창과 버튼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button4"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/search"
                android:paddingRight="10dp"/>

            <Button
                android:id="@+id/checkBtn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/button4"/>
        </LinearLayout>


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/restBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button6"
                    android:text="multicultural"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/hosBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/button6"
                    android:text="Hospital"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bold"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cusBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/button6"
                    android:text="Counseling"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bold"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/userBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/button6"
                    android:text="You"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bold"/>

            </LinearLayout>

        </HorizontalScrollView>
        <!-- 버튼 그룹 --></androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
